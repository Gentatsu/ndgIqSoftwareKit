<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:showIn="@layout/layout_edit_be"
    tools:context=".reminders.add_edit.ActivityEditBeEvent"
    >

    <LinearLayout
        android:id="@+id/be_delete_all_recurrences_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_centerHorizontal="true"
        >

        <TextView
            android:paddingTop="@dimen/activity_vertical_margin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/be_delete_all_recurrences_message"
            />

        <Switch
            android:id="@+id/be_delete_all_recurrences_switch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            />

    </LinearLayout>

    <Button
        android:id="@+id/delete_button"
        android:layout_below="@id/be_delete_all_recurrences_layout"
        android:layout_width="@dimen/delete_button_size"
        android:layout_height="wrap_content"
        android:text="@string/delete_button"
        android:theme="@style/Base.ThemeOverlay.AppCompat.Dark.ActionBar"
        android:layout_centerHorizontal="true"
        />

</RelativeLayout>