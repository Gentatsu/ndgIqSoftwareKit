    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_edit_be"
    tools:context=".reminders.add_edit.ActivityEditBeEvent"
    android:orientation="vertical"
    >

    <fragment
        android:id="@+id/fragment_edit_be"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        class="com.intel.wearable.platform.timeiq.refapp.reminders.add_edit.FragmentEditBe"
        />

    <include layout="@layout/layout_edit_be_delete"/>

</LinearLayout>