<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="10dp"

    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:dividerPadding="30dp"
        android:background="@drawable/sessionbg"
        android:padding="20dp"
        android:gravity="center">

    <!-- Dummy text view that will display the name of a random country. -->
    <ImageButton android:id="@+id/activityicon"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:background="@drawable/walking"
       />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"

            android:layout_alignParentLeft="true"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Biking"
                android:id="@+id/type"
                android:textSize="16sp"
                android:paddingLeft="20dp"

                android:textColor="@color/darkblue"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1:35 pm"
                android:textColor="@color/darkgray"
                android:textSize="14sp"
                android:paddingLeft="20dp"
                android:id="@+id/timeshort"

                android:paddingTop="2dp"/>

        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_gravity="center_vertical"
            android:layout_alignParentRight="true"


            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.34 mi"
                android:textSize="16sp"
                android:layout_gravity="right"
                android:id="@+id/distance"
                android:maxLines="1"
                android:singleLine="true"


                android:textColor="@color/darkblue"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1 hour 53 min"
                android:textColor="@color/darkgray"
                android:textSize="14sp"
                android:layout_gravity="right"
                android:id="@+id/timelong"
                android:maxLines="1"
                android:singleLine="true"


                android:paddingTop="2dp"/>

        </LinearLayout>

    </RelativeLayout>
        </LinearLayout>
</LinearLayout>