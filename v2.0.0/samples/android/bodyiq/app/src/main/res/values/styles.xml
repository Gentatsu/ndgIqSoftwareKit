<resources>

    <!-- Base application theme. -->
    <style name="ToolBarStyle" parent="@style/Theme.AppCompat.Light">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:theme">@style/Theme.AppCompat.NoActionBar</item>



        <!--   your app branding color for the app bar -->
        <!--   darker variant for the status bar and contextual app bars -->
    </style>
    <style name="AppTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>

    </style>

    <style name="SplashTheme" parent="@style/Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash</item>

    </style>

    <style name="EditTextField" parent="android:Widget.EditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:colorFocusedHighlight">@color/white</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:backgroundTint">@color/edittextcolors</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">8pt</item>
    </style>

    <style name="DropDown" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:padding">8dp</item>
        <item name="android:textSize">8pt</item>
    </style>


    <style name="Spinner" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">70dp</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="Buttons" parent="android:Widget.Button">
        <item name="android:layout_marginTop">@dimen/buttontopmargin</item>
        <item name="android:layout_width">@dimen/buttonwidth</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_height">wrap_content</item>

    </style>


    <style name="SmallTextView" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SubTitle" parent="android:Widget.TextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ActivityDate" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_gravity">center_horizontal</item>
    </style>

    <style name="ActivityNumber" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">30sp</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="ActivityLabel" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">center</item>
    </style>



    <style name="Theme.DesignDemo" parent="Base.Theme.DesignDemo">
    </style>

    <style name="Base.Theme.DesignDemo" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimaryDark">#0978BF</item>
        <item name="android:windowBackground">@color/darkblue</item>
        <item name="colorPrimary">#0978BF</item>
    </style>

    <style name="Widget.CardContent" parent="android:Widget">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
        <item name="android:orientation">vertical</item>
    </style>






</resources>
