<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="RemindersFragment"
    android:orientation="horizontal"
    >

    <TextView
        android:id="@+id/state_change_date_and_time"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:text="time"
        />

    <TextView
        android:id="@+id/state_change_type"
        android:layout_width="120dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        android:text="type"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:gravity="center_horizontal"
        >

        <TextView
            android:id="@+id/state_change_old_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="old state"
            />

        <TextView
            android:id="@+id/state_change_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developer_fragment_state_arrow"
            android:textColor="@android:color/black"
            />

        <TextView
            android:id="@+id/state_change_new_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:text="new state"
            />

    </LinearLayout>

</LinearLayout>
