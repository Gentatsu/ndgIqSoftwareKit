<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/activity_add_or_edit_place"
    tools:context=".places.ActivityAddOrEditPlace"
    android:orientation="vertical">

    <EditText
        android:id="@+id/add_or_edit_place_search_autocomplete_search"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/places_address_hint"
        style="@style/Base.V12.Widget.AppCompat.EditText"
        android:gravity="center_horizontal"
        android:inputType="textCapSentences"
        />

    <ListView
        android:id="@+id/add_or_edit_place_search_results_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

</LinearLayout>
